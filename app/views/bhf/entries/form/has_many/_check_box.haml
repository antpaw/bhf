- #just a test, :has_many shouldn't be editable imo

- ref_name = field.reflection.name
.node
  .label
    %p= ref_name.humanize
  .input
    %ul
      - field.reflection.klass.all.each do |obj|
        %li
          = check_box_tag "has_many[#{ref_name}][#{obj.id}]", obj, f.object.send(ref_name).include?(obj)
          = label_tag "has_many_#{ref_name}_#{obj.id}", obj.to_bhf_s