!!!
%html{:lang => I18n.locale}
  %head
    %meta{:charset => 'utf-8'}
    %title= @title.to_s
    = csrf_meta_tag
    %link{:href => '/favicon.ico', :rel => 'icon', :type => 'image/x-icon'}
    = stylesheet_link_tag 'bhf'
    =# javascript_include_tag 'bhf'
    =# javascript_include_tag 'mootools-core-1.3-full-nocompat-yc.js', 'mootools_rails_driver-0.4.1.js', 'class/BrowserUpdate', 'bhf_application'
    
  %body
    %header
      %ul
        - @config.pages.each do |page|
          %li{:class => ('active' if @page == page)}
            = link_to page, bhf_page_path(page)

    #content
      = render :partial => 'bhf/helper/flash', :locals => {:flash => flash}
      = yield

    %footer